%h1 #{@article.title} (#{@article.view_count})

%p
  Tags:
  - @article.tags.each do |tag|
    = link_to tag.name, tag_path(tag)
%p= image_tag @article.image.url(:medium)
%p= @article.content
%hr
%div#like
  %input{:onclick => "like('#{@article.id}')", :type => "button", :value => "Like"}
  %p= @article.like
%hr
%h3 Comments #{@article.comments.size}
%div
  = render partial: 'comments/comment', collection: @article.comments

%div
  = render partial: 'comments/form'

%div
  = link_to 'Back', articles_path
  %br
  %br
  - if current_user && @article.user_id == current_user.id
    \#{link_to 'Edit', edit_article_path(@article)} |
    \#{link_to "delete", article_path(@article), method: :delete, data: {confirm: "Really delete the article?"}}