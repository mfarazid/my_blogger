= form_for(@article) do |f|
  - if @article.errors.any?
    %ul
      - @article.errors.full_messages.each do |msg|
        %li= msg
  .field
    = f.label :title
    %br/
    = f.text_field :title
  .field
    = f.label :content
    %br/
    = f.text_area :content
  .field
    = f.label :tag_list
    %br/
    = f.text_field :tag_list  
  .actions
    = f.submit
